@model EnglishVideo.Models.LoginModel

@{
    Layout = null;
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link href="~/Content/MyCss/Login.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid h-100 ">
        <div class="row h-100">
            <div class="col-lg-4 offset-lg-4 my-auto block-auth">
                <div class="title">
                    <span>Авторизация</span>
                </div>
                <div class="form-auth">

                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { placeholder = "Логин/email" } })

                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { type = "password", placeholder = "Пароль" } })

                    <input type="submit" value="ВОЙТИ" id="submit">
                    <div id="error">

                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="register">
                    <span>
                        @Html.ActionLink("Регистрация", "Register", "Account")
                    </span>
                </div>
            </div>

        </div>
    </div>



}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
