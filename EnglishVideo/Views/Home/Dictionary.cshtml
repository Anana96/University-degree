@model IEnumerable<EnglishVideo.Models.Word>
<link href="~/Content/MyCss/Dictionary.css" rel="stylesheet" />


<h3> Ваш словарь:</h3>
@if(Model.Count() == 0)
{
    <br />
    <h4> Добавьте свой первый перевод :)</h4>
}
else { 

<div class="table-responsive">
    <table class="table text-center">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.English)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Russia)
                </th>
                <th scope="col">Удалить перевод</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.English)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Russia)
                    </td>
                    <td>
                        @Html.ActionLink("×", "DeleteWord", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
 </div>
}